{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "noImplicitAny": true,
        "noImplicitReturns":true,
        "noImplicitThis": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "allowJs": true,
        "baseUrl": "./",
        "paths": {
            "*": ["./types/*"]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
