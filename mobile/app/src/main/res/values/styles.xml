<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>


    <style name="toolbarButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:minWidth">@dimen/button_height</item>
        <item name="android:width">@dimen/button_height</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="toolbarTitle">
        <item name="android:textSize">@dimen/toolbar_title_font_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
